#!/usr/bin/env bash
# This script installs and configures Nginx to serve a custom 404 page with "Ceci n'est pas une page"

# Update package list and install nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create the custom 404 HTML page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custom_404.html

# Update the Nginx default configuration to use the custom 404 page
sudo sed -i '/server {/a \\tlocation /404.html {\n\t\treturn 404 /custom_404.html;\n\t}\n\tlocation = /custom_404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx using the service command
sudo service nginx restart

# Ensure Nginx starts on boot
sudo update-rc.d nginx defaults

# Verify Nginx is serving the custom 404 page
if curl -s -o /dev/null -w "%{http_code}" http://localhost/nonexistentpage | grep -q "404"; then
    echo "Nginx is serving the custom 404 page."
else
    echo "Nginx is not serving the custom 404 page."
    exit 1
fi
